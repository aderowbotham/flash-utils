package com.aderowbotham.utils.display {		/**	 * @project com.aderowbotham.utils	 * @author Ade Rowbotham | www.aderowbotham.com	 * @copyright 2008	 **/		import flash.display.Sprite;		 	public class RoundedRectangle extends Sprite {						private var fillArea:Sprite;						private var rectWidth:uint;		private var rectHeight:uint;				private var cornerRad:uint;		private var FillColour:uint;		private var useKeyline:Boolean;		private var keylineColour:uint;									public function RoundedRectangle($width:uint,$height:uint,$cornerRadius:uint=20,$FillColour:uint=0xffffff,$keyline:Boolean=true,$keylineColour:uint=0x333333) {												//set vars from arguments			rectWidth = $width;			rectHeight = $height;												cornerRad = $cornerRadius;			FillColour = $FillColour;			useKeyline = $keyline;			keylineColour = $keylineColour;																	//create white areas, which sit outside the keyline			fillArea = new Sprite();												//1 px less to allow for keyline			if(useKeyline){				rectWidth -= 1;				rectHeight -= 1;			}															drawRectangle(fillArea);					addChild(fillArea);											}						private function drawRectangle($target:Sprite):void{						$target.graphics.beginFill(FillColour,100);			if(useKeyline){				$target.graphics.lineStyle(1,keylineColour,100,true,"none","square","miter");			}			$target.graphics.moveTo(cornerRad,0);			$target.graphics.lineTo(rectWidth-cornerRad,0);			$target.graphics.curveTo(rectWidth,0,rectWidth,cornerRad);			$target.graphics.lineTo(rectWidth,rectHeight-cornerRad);			$target.graphics.curveTo(rectWidth,rectHeight,rectWidth-cornerRad,rectHeight);			$target.graphics.lineTo(cornerRad,rectHeight);			$target.graphics.curveTo(0,rectHeight,0,rectHeight-cornerRad);			$target.graphics.lineTo(0,cornerRad);			$target.graphics.curveTo(0,0,cornerRad,0);				$target.graphics.endFill();			}										public function resizeTo($newWidth:uint,$newHeight:uint):void{						rectWidth = $newWidth;			rectHeight = $newHeight;									if(useKeyline){				rectWidth -= 1;				rectHeight -= 1;			}																		fillArea.graphics.clear();								drawRectangle(fillArea);										}			}			}