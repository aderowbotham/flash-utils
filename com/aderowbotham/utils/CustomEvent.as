package com.aderowbotham.utils {	/**	 * @project com.aderowbotham.utils	 * @author Ade Rowbotham | www.aderowbotham.com	 * @copyright 2008	 **/	import flash.events.Event;			public class CustomEvent extends Event {					private var eventData:Object;		private var targetID:uint;		private var targetAction:String;								public function CustomEvent(type:String,$targetID:uint = 0,$targetAction:String = null){						super(type);							targetID = $targetID;									if($targetAction != null){				targetAction = $targetAction;			}		}				public function appendData($data:Object):void{						if(eventData == null){				eventData = $data;			} else {				//add items in the new object to the existing object				for(var item:String in $data){					//trace("appendData adding: "+item+" = "+$data[item]);					eventData[item] = $data[item];				}							}							}						public function getData():Object{					return eventData;		}				public function getTargetID():uint{			return targetID;		}				public function getTargetAction():String{			return targetAction;		}							}	}